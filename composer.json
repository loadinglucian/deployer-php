{
    "name": "loadinglucian/deployer",
    "description": "Server and site deployment tool for PHP",
    "type": "library",
    "keywords": [
        "deployment",
        "server",
        "automation",
        "devops"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lucian Văcăroiu",
            "email": "lucian@bigpixelrocket.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pcntl": "*",
        "aws/aws-sdk-php": "^3.369",
        "guzzlehttp/guzzle": "^7.10",
        "laravel/prompts": "^0.3.8",
        "phpseclib/phpseclib": "^3.0",
        "symfony/console": "^7.4",
        "symfony/dotenv": "^7.4",
        "symfony/filesystem": "^7.4",
        "symfony/yaml": "^7.4",
        "toin0u/digitalocean-v2": "^5.0"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.7",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Deployer\\": "app"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "bin": [
        "bin/deployer"
    ],
    "scripts": {
        "pall": [
            "composer pint && composer pstan && composer phpmd && composer rect && composer pest"
        ],
        "pest": [
            "vendor/bin/pest --parallel --coverage"
        ],
        "pint": [
            "vendor/bin/pint --parallel"
        ],
        "phpmd": [
            "vendor/bin/phpmd app,bin text phpmd.xml"
        ],
        "pstan": [
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "rect": [
            "vendor/bin/rector process"
        ],
        "bash": [
            "shfmt -i 0 -bn -ci -sr -w playbooks/*.sh"
        ],
        "bash:check": [
            "shfmt -i 0 -bn -ci -sr -d playbooks/*.sh"
        ],
        "bats": [
            "./tests/bats/run.sh run"
        ],
        "bats:start": [
            "./tests/bats/run.sh start"
        ],
        "bats:stop": [
            "./tests/bats/run.sh stop"
        ]
    },
    "config": {
        "process-timeout": 900,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
